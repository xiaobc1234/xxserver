    <!-- main content start-->
    <div class="main-content">

        <!-- header section start-->
        <div class="header-section">

            <!--toggle button start-->
            <a class="toggle-btn"><i class="fa fa-bars"></i></a>
            <!--toggle button end-->

            <!--search start-->
            <form class="searchform" action="#" method="post">
                <input type="text" class="form-control" name="keyword" placeholder="Search here..."/>
            </form>
            <!--search end-->


        </div>
        <!-- header section end-->

        <!-- page heading start-->
        <div class="page-heading">
            <h3>
                Editable Table
            </h3>
            <ul class="breadcrumb">
                <li class="active">应用列表</li>
            </ul>
        </div>
        <!-- page heading end-->

        <!--body wrapper start-->
        <div class="wrapper tasks">
            <div class="row">
                <div class="col-sm-12">
                    <section class="panel">
                        <header class="panel-heading">
                            应用列表
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    ##                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
                        </header>
                        <div class="panel-body">
                            <div class="adv-table editable-table ">
                                <div class="clearfix" style="margin-bottom: 10px;">
                                    <div class="btn-group">
                                        <a href="#gamesModel" id="add_games" data-toggle="modal" class="btn btn-primary">
                                            添加应用<i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="space15"></div>
                                <table class="table table-striped table-hover table-bordered" id="games_table">
                                    <thead>
                                    <tr>
                                        <th class="select_all" rowspan="1" colspan="1" style="width: 34px;"></th>
                                        <th>id</th>
                                        <th>应用名称</th>
                                        <th style="width:30%">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>


                                    #foreach($item in $list)

                                        <tr class="data_item">
                                            <td><input item_id="$item.id" type="checkbox" name="selectBox"></td>
                                            <td>$item.id</td>
                                            <td>$item.appName</td>
                                            <td>
                                                <a class="device_list" href="/games/devices">设备列表</a> |
                                                <a class="task_list" href="/games/tasks">任务列表</a> |
                                                <a class="edit_" href="#gamesModelEdit" data-toggle="modal">修改</a> |
                                                <a class="delete" href="javascript:;">删除</a>
                                            </td>
                                        </tr>

                                    #end
                                    <tr class="data_item">
                                        <td><input item_id="1" type="checkbox" name="selectBox"></td>
                                        <td>1</td>
                                        <td>传奇天下</td>
                                        <td>
                                            <a class="device_list" href="javascript:;">设备列表</a> |
                                            <a class="task_list" href="javascript:;">任务列表</a> |
                                            <a class="edit_" href="javascript:;">修改</a> |
                                            <a class="delete" href="javascript:;">删除</a>
                                        </td>
                                    </tr>

                                    </tbody>
                                </table>

                                <!-- Modal -->
                                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="gamesModel" class="modal fade">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                                <h4 class="modal-title">添加应用</h4>
                                            </div>
                                            <div class="modal-body">

                                                应用名称：<input tyle="text" name="gamesName">

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                                                <button type="button" class="btn btn-success add_games">确定</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- modal -->
                                <!-- Modal -->
                                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="gamesModelEdit" class="modal fade">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                                <h4 class="modal-title">修改应用</h4>
                                            </div>
                                            <div class="modal-body">

                                                应用名称：<input tyle="text" name="gamesNameEdit">

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                                                <button type="button" class="btn btn-success edit_games">确定</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- modal -->


                            </div>
                        </div>
                    </section>
                </div>
            </div>
